<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="288dp"
        android:layout_height="550dp"
        android:src="@drawable/device_outline"
        android:layout_gravity="center"/>

    <FrameLayout
        android:layout_width="248dp"
        android:layout_height="440dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/device_screen"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- /////////////////////////////////////////////////////// Divider-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFF"
                android:alpha="0.20"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <!-- /////////////////////////////////////////////////////// Item 1-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="7dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_folder_mini"
                    android:background="@drawable/oobe_select_circle"
                    android:backgroundTint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item1_title"
                        android:textColor="#FFF"
                        android:alpha="0.54"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item1_info"
                        android:textColor="#FFF"
                        android:alpha="0.24"
                        android:textSize="12sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_details"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.25"/>

            </LinearLayout>

            <!-- /////////////////////////////////////////////////////// Divider-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="48dp"
                    android:layout_height="match_parent"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#FFF"
                    android:alpha="0.20"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <!-- /////////////////////////////////////////////////////// Item 2-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="7dp"
                    android:tint="#80ffffff"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/select_icon"
                    android:background="@drawable/oobe_select_circle"
                    android:backgroundTint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item2_title"
                        android:textColor="#FFF"
                        android:alpha="0.54"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item2_info"
                        android:textColor="#FFF"
                        android:alpha="0.24"
                        android:textSize="12sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_details"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.25"
                    android:id="@+id/oobe_info_button"
                    android:clickable="true"/>

            </LinearLayout>

            <!-- /////////////////////////////////////////////////////// Item 3-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/oobe_select_circle"
                    android:backgroundTint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item3_title"
                        android:textColor="#FFF"
                        android:alpha="0.54"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item3_info"
                        android:textColor="#FFF"
                        android:alpha="0.24"
                        android:textSize="12sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_details"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.25"/>

            </LinearLayout>

            <!-- /////////////////////////////////////////////////////// Item 4-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/oobe_select_circle"
                    android:backgroundTint="#80ffffff"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item4_title"
                        android:textColor="#FFF"
                        android:alpha="0.54"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item4_info"
                        android:textColor="#FFF"
                        android:alpha="0.24"
                        android:textSize="12sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_details"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.25"/>

            </LinearLayout>

        </LinearLayout>



        <!-- /////////////////////////////////////////////////////// Info Menu-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="2dp"
            android:id="@+id/info_popup">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="#06796F">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="@string/illustration_item3_title"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="#FFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share"
                            android:tint="@color/oobe_card_icon"
                            android:layout_gravity="center"
                            android:layout_marginBottom="11dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share_icon_text"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share_link"
                            android:tint="@color/oobe_card_icon"
                            android:layout_gravity="center"
                            android:layout_marginBottom="11dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share_link_icon_text"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_favorite_off"
                            android:tint="@color/oobe_card_icon"
                            android:layout_gravity="center"
                            android:layout_marginBottom="11dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/favorite_icon_text"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_rename"
                            android:tint="@color/oobe_card_icon"
                            android:layout_gravity="center"
                            android:layout_marginBottom="11dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rename_icon_text"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <!-- /////////////////////////////////////////////////////// select menu-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:id="@+id/select_toolbar"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#455A64"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item2_title"
                        android:textSize="14sp"
                        android:textColor="#e6ffffff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/illustration_item2_info"
                        android:textSize="12sp"
                        android:textColor="#88ffffff"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_share"
                    android:layout_weight="0"
                    android:layout_marginStart="12dp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_object_move"
                    android:layout_weight="0"
                    android:layout_marginStart="12dp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_object_copy"
                    android:layout_weight="0"
                    android:layout_marginStart="12dp"/>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_overflow"
                    android:layout_weight="0"
                    android:layout_marginStart="12dp"/>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>


    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/oobe_highlight_circle"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="167dp"
        android:id="@+id/oobe_info_highlight"/>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/oobe_highlight_circle"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="167dp"
        android:id="@+id/oobe_select_highlight"/>

</FrameLayout>